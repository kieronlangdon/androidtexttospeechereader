<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hughpearse.textToSpeechReader">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.android.vending.BILLING" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="hughpearse.textToSpeechReader.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="hughpearse.textToSpeechReader.SelectFileActivity" />
        <activity android:name="hughpearse.textToSpeechReader.HandleFileTypes" />
        <activity android:name="hughpearse.textToSpeechReader.ReaderActivity" />

        <service
            android:name="hughpearse.textToSpeechReader.MyTTSService"
            android:enabled="true"
            android:exported="true" />

        <activity android:name="hughpearse.textToSpeechReader.DonateActivity"></activity>
    </application>

</manifest>